{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "create-build-directory",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/build",
                "${workspaceFolder}/install"
            ]
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "..",
                "-DCMAKE_INSTALL_PREFIX=${workspaceFolder}/install",
				"-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "create-build-directory"
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "cmake"
            ]
        },
        {
            "label": "install",
            "type": "shell",
            "command": "make",
            "args": [
                "install",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "make"
            ]
        },
		{
            "label": "build-debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "install"
            ]
        }
	]
}